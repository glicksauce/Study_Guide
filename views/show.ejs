<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript"src='/js/quiz.js'></script>
    <%- include("./partials/head.ejs") %>
    <link rel="stylesheet" href="/css/quiz.css">
    
    <title>Study Guide</title>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <%- include("./partials/header.ejs") %>

        <% if(currentUser) { %>
           <div class="quiz-title"><h2><%=guides.guide_name%></h2></div>
            <div class="quiz-description"><%=guides.description%></div>
            <div class="question-length"><%=guides.guide_data.length%> Questions in this Study Guide:</div>
            <div class="quiz-button-options">
                <input type="button" id="take-quiz" value="Take this quiz">
                <form action='/studyguide/<%=guides.id%>/edit/list' method="GET">
                    <input type="submit" id="edit-quiz" value="Edit this quiz">
                </form>
                <form action='/studyguide/<%=guides.id%>?_method=DELETE' method="POST">
                    <input type="submit" id="delete-quiz" value="Delete this quiz">
                </form>
            </div>
            <% for (j=0;j < guides.guide_data.length; j++) { %>
                <div class="quiz-question" id="<%=j%>" >
                    <div class="question">
                        <%=guides.guide_data[j].question%>
                        <% for (k=0;k < guides.guide_data[j].answers.length; k++) { %>
                            <div class="answer" id="set<%=j%>-answer-<%=k%>"><%=guides.guide_data[j].answers[k]%></div>
                        <% } %>
                        <div class="correct-answer"><%=guides.guide_data[j].correct_answer%></div>
                    </div>
                    <input type="button" class="next-button" value="Next Question">
                </div>
                
            <% } %>
            <div class="answer-section"></div>
        <% } else { %>
            <div>You need to be logged in to view this page</div>
        <% } %>

</body>
</html>